@page
@model RegisterModel
@{
    ViewData["Title"] = "Regístrate";
}

<link rel="stylesheet" href="~/css/register.css" />

<h1>@ViewData["Title"]</h1>
<p id="description" class="description text-center">Regístrate con tu email y una contraseña para poder iniciar sesión.</p>

<div class="row register-login-form">
    <div class="">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Crea una cuenta nueva.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label id="label" asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label id="label" asp-for="Input.Password">Contraseña</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label id="label" asp-for="Input.ConfirmPassword">Confirma tu contraseña</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Regístrate</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
