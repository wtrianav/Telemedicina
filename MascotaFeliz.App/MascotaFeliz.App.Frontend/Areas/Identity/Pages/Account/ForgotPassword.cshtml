@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Restablece tu contraseña";
}
<link rel="stylesheet" href="~/css/register.css" />

<h1>@ViewData["Title"]</h1>
<p id="description" class="description text-center">Si olvidaste tu contraseña podrás restablecerla aquí.</p>

<div class="row register-login-form">
    <div class="">
        <form method="post">
            <h4>Ingresa tu email.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label id="label" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
